{
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "category",
      "title",
      "severity",
      "confidence",
      "evidence",
      "explanation",
      "fix_suggestion"
    ],
    "properties": {
      "category": {
        "type": "string",
        "description": "DASP vulnerability category",
        "enum": [
          "reentrancy",
          "access_control",
          "arithmetic",
          "unchecked_low_level_calls",
          "denial_of_service",
          "bad_randomness",
          "front_running",
          "time_manipulation",
          "short_addresses",
          "other"
        ]
      },
      "title": {
        "type": "string"
      },
      "severity": {
        "type": "string",
        "enum": [
          "low",
          "medium",
          "high",
          "critical",
          "unknown"
        ]
      },
      "confidence": {
        "type": "number",
        "minimum": 0.0,
        "maximum": 1.0
      },
      "evidence": {
        "type": "object",
        "required": [
          "file",
          "lines",
          "function"
        ],
        "properties": {
          "file": {
            "type": "string"
          },
          "lines": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "function": {
            "type": "string"
          }
        }
      },
      "explanation": {
        "type": "string"
      },
      "fix_suggestion": {
        "type": "string"
      }
    }
  }
}
